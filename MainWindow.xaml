<Window x:Class="LamaWorlds_OBS_AddonManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="LamaWorlds - OBS Addon Manager" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundColor}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <Border Grid.Row="0" Background="{StaticResource SecondaryColor}" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0" Source="assets/Logo/logo_64x64.png" Width="48" Height="48" Margin="0,0,15,0"/>
                
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="LamaWorlds OBS Addon Manager" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Gérez vos plugins OBS facilement" 
                               FontSize="12" 
                               Foreground="#B0B0B0" 
                               Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="Actualiser" 
                            Style="{StaticResource SecondaryButton}"
                            Foreground="White"
                            BorderBrush="White"
                            Click="RefreshButton_Click"
                            Margin="0,0,10,0"/>
                    <Button Content="Rechercher" 
                            Style="{StaticResource SecondaryButton}"
                            Foreground="White"
                            BorderBrush="White"
                            Click="SearchButton_Click"
                            Margin="0,0,10,0"/>
                    <Button Content="⚙ Paramètres" 
                            Style="{StaticResource SecondaryButton}"
                            Foreground="White"
                            BorderBrush="White"
                            Click="SettingsButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenu principal -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Grid.Column="0" 
                    Style="{StaticResource CardStyle}" 
                    Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Navigation" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Margin="0,0,0,15"/>

                    <RadioButton Content="Plugins Installés" 
                                 IsChecked="True"
                                 GroupName="NavGroup"
                                 Checked="InstalledPlugins_Checked"
                                 Margin="0,5"/>
                    <RadioButton Content="Rechercher Plugins" 
                                 GroupName="NavGroup"
                                 Checked="SearchPlugins_Checked"
                                 Margin="0,5"/>
                    <RadioButton Content="Mises à jour" 
                                 GroupName="NavGroup"
                                 Checked="Updates_Checked"
                                 Margin="0,5"/>

                    <Separator Margin="0,15"/>

                    <TextBlock Text="Filtres" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,10"/>

                    <ComboBox x:Name="CategoryFilter" 
                              SelectionChanged="CategoryFilter_SelectionChanged"
                              Margin="0,5">
                        <ComboBoxItem Content="Toutes les catégories" IsSelected="True"/>
                        <ComboBoxItem Content="Intégration"/>
                        <ComboBoxItem Content="Effets"/>
                        <ComboBoxItem Content="Sources"/>
                        <ComboBoxItem Content="Filtres"/>
                    </ComboBox>

                    <TextBlock Text="Recherche" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               Margin="0,15,0,10"/>

                    <TextBox x:Name="SearchTextBox" 
                             TextChanged="SearchTextBox_TextChanged"
                             Padding="8"
                             Margin="0,5"/>
                </StackPanel>
            </Border>

            <!-- Liste des plugins -->
            <ScrollViewer Grid.Column="1" 
                          VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="PluginsList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Name}" 
                                                           FontSize="18" 
                                                           FontWeight="Bold"
                                                           Margin="0,0,0,5"/>
                                                <TextBlock Text="{Binding Description}" 
                                                           TextWrapping="Wrap"
                                                           Foreground="#666"
                                                           Margin="0,0,0,10"/>
                                                
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="Auteur: " FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding Author}"/>
                                                    <TextBlock Text=" | " Margin="5,0"/>
                                                    <TextBlock Text="Version: " FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding Version}"/>
                                                    <TextBlock Text=" | " Margin="5,0">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding HasUpdate}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                    <TextBlock Text="Mise à jour disponible!" 
                                                               Foreground="{StaticResource AccentColor}"
                                                               FontWeight="Bold">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding HasUpdate}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                <TextBlock Text="{Binding Category}" 
                                                           Background="#E8F4FD"
                                                           Foreground="{StaticResource PrimaryColor}"
                                                           Padding="8,4"
                                                           Margin="0,0,5,0"
                                                           FontSize="11"/>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" 
                                                Orientation="Horizontal"
                                                VerticalAlignment="Center"
                                                Margin="15,0,0,0">
                                        <Button Content="Mettre à jour" 
                                                Click="UpdatePlugin_Click"
                                                Tag="{Binding}"
                                                Margin="0,0,5,0">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding HasUpdate}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        <Button Content="Installer" 
                                                Click="InstallPlugin_Click"
                                                Tag="{Binding}"
                                                Margin="0,0,5,0">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsInstalled}" Value="False">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        <Button Content="Désinstaller" 
                                                Click="UninstallPlugin_Click"
                                                Tag="{Binding}">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsInstalled}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!-- Barre de statut -->
        <Border Grid.Row="2" 
                Background="{StaticResource CardBackground}" 
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,1,0,0"
                Padding="15">
            <Grid>
                <TextBlock x:Name="StatusText" 
                           Text="Prêt" 
                           VerticalAlignment="Center"/>
                <ProgressBar x:Name="ProgressBar" 
                             Visibility="Collapsed"
                             Height="4"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Stretch"/>
            </Grid>
        </Border>
    </Grid>
</Window>
