{
  "name": "lamaworlds-obs-addonmanager",
  "productName": "Lama Worlds OBS Addon Manager",
  "description": "Fast, local, user-friendly tool to manage OBS Studio addons and plugins",
  "author": "Lama Worlds",
  "private": true,
  "version": "1.0.0",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently -k -n \"VITE,ELECTRON\" -c \"cyan,yellow\" \"vite\" \"wait-on http://localhost:5173 && npm run compile:electron && electron .\"",
    "dev:vite": "vite",
    "dev:electron": "npm run compile:electron && electron .",
    "build": "tsc && vite build && tsc -p electron/tsconfig.json && electron-builder",
    "compile:electron": "tsc -p electron/tsconfig.json"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "semver": "^7.5.4",
    "yauzl": "^2.10.0"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/node": "^20.3.1",
    "@types/react": "^18.2.13",
    "@types/react-dom": "^18.2.6",
    "@types/semver": "^7.5.6",
    "@types/yauzl": "^2.10.3",
    "@vitejs/plugin-react": "^4.0.1",
    "concurrently": "^8.2.0",
    "electron": "^25.2.0",
    "electron-builder": "^24.4.0",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.lamaworlds.obsaddonmanager",
    "productName": "Lama Worlds OBS Addon Manager",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "electronDownload": {
      "cache": "./.electron-cache"
    }
  }
}